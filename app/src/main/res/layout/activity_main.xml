<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="428dp"
    android:layout_height="926dp"
    android:background="#1c1c1e">

    <TextView
        style="@style/Header1"
        android:id="@+id/thanksTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="363dp"
        android:layout_marginBottom="485dp"
        android:textColor="@color/white"
        android:text="@string/thank_you" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/thanksTextView"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:alpha="0.8"
        android:gravity="center_horizontal|top"
        android:text="@string/description"
        android:textAppearance="@style/Text2"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="522dp"
        android:layout_marginBottom="354dp"
        android:backgroundTint="@color/light_purple"
        android:elevation="15dp"
        android:text="@string/continue_button"
        android:textAppearance="@style/Text2" />

    <Button
        android:id="@+id/ordersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/continueButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:alpha="0.7"
        android:backgroundTint="@color/black"
        android:text="@string/go_to_orders"
        android:textAppearance="@style/Text2"
        android:textColor="@color/white" />

</RelativeLayout>